<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:landptf="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.landptf.view.ButtonM
        android:id="@+id/btm_positive"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="18sp"
        landptf:backColor="@color/mainColor"
        landptf:backColorPress="@color/mainColorPress"
        landptf:textColor="@android:color/white" />

    <com.landptf.view.ButtonM
        android:id="@+id/btm_negative"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        landptf:backColor="@color/content"
        landptf:backColorPress="@color/contentPress"
        landptf:textColor="@color/text" />

</LinearLayout>
